{
  "name": "hunspell-native",
  "version": "0.0.1",
  "description": "Cross-platform Node.js binding for Hunspell, the spellcheck library used by LibreOffice, Firefox, Chrome and Adobe.",
  "author": "Vincent Weevers",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "types": "src/index.d.ts",
  "files": [
    "patches",
    "prebuilds",
    "scripts",
    "src",
    "!src/hunspell/msvc/",
    "!src/hunspell/tests/",
    "!src/hunspell/.travis.yml",
    "!src/hunspell/appveyor.yml",
    "binding.gyp",
    "CHANGELOG.md",
    "index.js"
  ],
  "scripts": {
    "install": "node-gyp-build",
    "test": "eslint && node test/index.js",
    "test-watch": "node --test --watch test/index.js",
    "test-prebuild": "cross-env PREBUILDS_ONLY=1 npm t",
    "rebuild": "npm run install --build-from-source",
    "prebuild": "prebuildify --napi --strip"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@voxpelli/tsconfig": "^16.1.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "neostandard": "^0.12.2",
    "node-gyp": "^11.5.0",
    "prebuildify": "^6.0.1",
    "prebuildify-cross": "github:prebuild/prebuildify-cross#40eca0c",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": "https://github.com/vweevers/hunspell-native",
  "bugs": "https://github.com/vweevers/hunspell-native/issues",
  "gypfile": true,
  "keywords": [
    "spell",
    "spelling",
    "spellcheck",
    "spellchecker",
    "hunspell"
  ]
}
